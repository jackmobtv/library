@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Edit" asp-controller="User">
            <div class="form-floating mb-3">
                <input type="text" id="firstname" name="firstname" class="form-control" value="@ViewBag.User.FirstName" />
                <label for="firstname" class="form-label">First Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" id="lastname" name="lastname" class="form-control" value="@ViewBag.User.LastName" />
                <label for="lastname" class="form-label">Last Name</label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>