<Window x:Class="WPFPresentation.frmCreateGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPresentation"
        mc:Ignorable="d"
        Title="Genre" Height="150" Width="225" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0">Please Enter the Genre Descrption</Label>
        <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="txtDescription" Width="200" Grid.Row="1" Padding="0 2 0 2"></TextBox>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="btnConfirm" Padding="10 5 10 5" Grid.Row="2" Click="btnConfirm_Click">Confirm</Button>
    </Grid>
</Window>
