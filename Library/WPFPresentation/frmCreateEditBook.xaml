<Window x:Class="WPFPresentation.frmCreateEditBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPresentation"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Book" Height="350" Width="600" ShowInTaskbar="True" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Title:</Label>
                <Label Grid.Row="0" Grid.Column="1">Genre:</Label>
                <TextBox Padding="0 2 0 2" x:Name="txtTitle" Width="150" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap"></TextBox>
                <TextBox Padding="0 2 0 2" x:Name="txtGenre" Width="100" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap"></TextBox>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Author:</Label>
                <Label Grid.Row="0" Grid.Column="1">Publisher:</Label>
                <TextBox Padding="0 2 0 2" x:Name="txtAuthor" Width="150" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap"></TextBox>
                <TextBox Padding="0 2 0 2" x:Name="txtPublisher" Width="100" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap"></TextBox>
            </Grid>

            <TextBox x:Name="txtDescription" Grid.Row="2" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"></TextBox>
            <Button x:Name="btnConfirm" Padding="10 5 10 5" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center">Confirm</Button>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" x:Name="grdCopyList" SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="*"/>
                    <DataGridTextColumn Header="Available" Binding="{Binding Active}" Width="75"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Padding="10 5 10 5" x:Name="btnAddCopy" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btnAddCopy_Click">Add Copy</Button>
                    <Button Grid.Row="1" Padding="10 5 10 5" x:Name="btnUpdateCopy" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btnUpdateCopy_Click">Update Copy</Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
